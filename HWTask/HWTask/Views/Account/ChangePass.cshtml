@model HWTask.Models.ChangePassViewModel

<h2>Смена пароля</h2>

<form asp-action="ChangePass" asp-controller="Account">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmedPassword">Подтвердите пароль</label>
            <input asp-for="ConfirmedPassword" />
            <span asp-validation-for="ConfirmedPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Change" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}