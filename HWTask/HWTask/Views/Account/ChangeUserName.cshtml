@model HWTask.Models.ChangeUserNameViewModel

<h2>Смена имени пользователя</h2>

<form asp-action="ChangeUserName" asp-controller="Account">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="UserName">Введите имя пользователия</label>
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" />
        </div>
        <div class="form-group">
            <input type="submit" value="Change" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
